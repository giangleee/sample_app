<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to (t ".appName"), root_path(locale: I18n.locale), id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only"><%= t ".nav" %></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu" class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to (t "static_pages.home.label"), root_path %></li>
        <li><%= link_to (t "static_pages.help.title"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to (t ".users"), users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to (t ".profile"), current_user %></li>
              <li><%= link_to (t ".setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to (t ".logout"), logout_path,
                            data: {"turbo-method": :delete} %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to (t ".signIn"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
