<% provide(:title, (t "layouts.header.signIn")) %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: login_path, scope: :session) do |f| %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.submit (t "layouts.header.signIn"), class: "btn btn-primary" %>
    <% end %>
    
    <p>New user? <%= link_to (t "layouts.header.signUp"), signup_path %></p>
  </div>
</div>
